            <th>Miktar</th>
            <th>Fiyat</th>
            <th>İptal</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookImage</td>
                <td>@item.BookName</td>
                <td>
                    <input type="number" />

                </td>
                <td>@item.SalePrice</td>
                <td>
                    <button class="btn btn-outline-dark">
                        İptal
                        <ion-icon name="trash-outline"></ion-icon>
                    </button>
