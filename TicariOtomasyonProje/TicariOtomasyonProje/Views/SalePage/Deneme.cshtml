@model TicariOtomasyonProje.Models.SalePageModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Los Pollos Hermanos Kitapçılık</title>
    <link href="~/DenemeMenü/NavBarCss.css" rel="stylesheet" />
    <link href="~/DenemeMenü/NavBarCss2.css" rel="stylesheet" />
    <link href="~/DenemeMenü/HeaderCss.css" rel="stylesheet" />
    <link href="~/DenemeMenü/SellCss.css" rel="stylesheet" />
    <link href="~/DenemeMenü/CardCss.css" rel="stylesheet" />
    <link href="~/DenemeMenü/ButtonCss.css" rel="stylesheet" />
    <link href="~/DenemeMenü/FooterCss.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="nav">
            <img src="~/Resimler/lospoloshermanos3.jpg" class="brand-logo" alt=""><a href="/SalePage/Deneme"></a>

            <div class="nav-items">

                <div class="search">
                    <input id="searchBox" type="text" class="search-box" placeholder="search brand, product">
                    <button class="search-btn" id="searchBtn">Ara</button>
                </div>

                <script>
                    $(document).ready(function () {
                        $("#searchBox").click(function () {
                            var Search = $("#searchBox").val();
                            var SearchItem = $("#searchItem").val();
                            SearchItem.html("");

                            $.ajax({
                                type: "post",
                                url: "ProductCategory/SearchBox?Search" + Search ,
                                contentType: "html",
                                success: function (result) {

                                }

                            })

                        })

                    })

                </script>




                <button class="btn-kayit" type="button" onclick="location.href='@Url.Action("DenemeLog", "CustomerLogin" )'">Giriş Yap</button>
                <button class="btn-giris">Sepetim</button>

            </div>
        </div>
        <ul class="links-container">
            <li class="link-item"> <a href="/SalePage/Deneme" class="link"> Ana Sayfa</a></li>
            @foreach (var category in Model.Category)
            {
                <li class="link-item"> <a href="/ProductCategory/Index/@category.CategoryID" class="link"> @category.CategoryName</a></li>
                <li class="link-item"><button class="submit-btn" onclick="location.href = '@Url.Action("Index", "ProductCategory" )/@category.CategoryID'" >sad</button></li>
            }


        </ul>

    </nav>


    <section class="product">
        <h2 class="product-category">Vitrin Ürünleri</h2>
    </section>

    <div class="product-container">
        @foreach (var item in Model.Book)
        {
            <div class="product-card" id="searchItem">
                <div class="product-image">
                    <span class="discount-tag">50% off</span>
                    <img src="~/Resimler/Metro2033.jpg" class="product-thumb" alt="">

                    <button type="button" class="card-btn" onclick="location.href='@Url.Action("Deneme", "BuyPage" )/@item.BookID'">Satın Al</button>


                </div>
                <div class="product-info">
                    <h2 class="product-brand">@item.BookName</h2>
                    <p class="product-short-des"></p>
                    <span class="price">@item.SalePrice</span><span class="actual-price">@item.PurchasePrice </span>
                </div>
            </div>

        }
    </div>

   
   


    <footer>
        <div class="footer-content">
            <img src="img/light-logo.png" class="logo" alt="">
            <div class="footer-ul-container">
                <ul class="category">
                    <li class="category-title">men</li>
                    <li><a href="#" class="footer-link">t-shirts</a></li>

                </ul>
                <ul class="category">
                    <li class="category-title">women</li>
                    <li><a href="#" class="footer-link">t-shirts</a></li>

                </ul>
            </div>
        </div>
    </footer>

