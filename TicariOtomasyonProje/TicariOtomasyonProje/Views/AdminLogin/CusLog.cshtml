
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link href="~/SellMenuCss/LoginRegisterFormCss.css" rel="stylesheet" />
    <link rel="stylesheet" href="style.css" />
    <title>Müşteri Giriş Formu</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form action="#" class="sign-in-form" method="post">
                    <h2 class="title">Giriş Yap</h2>
                    @using (Html.BeginForm("CusLog", "AdminLogin", FormMethod.Post))
                    {
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" name="CustomerName" placeholder="Kullanıcı Adı" required/>
                        </div>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" name="CustomerSurname" placeholder="Kullanıcı Soyadı" required/>
                        </div>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="CustomerPassword" placeholder="Şifre" required/>
                        </div>
                        <!-- <input type="submit" value="Giriş Yap" class="btn solid" />-->
                        <button class="btn solid" type="submit" >Giriş Yap</button>
                        <!--onclick="location.href='Url.Action("Deneme", "SalePage")'"-->

                        <div class="social-media">
                            <a href="#" class="font-weight-bold">
                                Şifremi Unuttum
                            </a>

                        </div>
                    }

                </form>
                <form action="#" class="sign-up-form" method="post">
                    <h2 class="title">Üye Ol</h2>

                    @using (Html.BeginForm("RegisterV3", "CustomerLogin", FormMethod.Post))
                    {
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" name="CustomerName" placeholder="Kullanıcı Adı" />


                        </div>

                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="CustomerPassword" placeholder="Şifre" />

                        </div>
                        <!--<input type="submit" class="btn" value="Üye Ol" /> -->
                        <button class="btn" type="submit">Üye Ol</button>
                    }


                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Hala Üye Olmadınmı ?</h3>
                    <p>
                        Binlerce kitaptan sende faydalanmak istiyorsan hemen üye ol
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Üye Ol
                    </button>
                    <button class="btn transparent" id="sign-up-btn" onclick="location.href='@Url.Action("Register", "CustomerLogin")'">
                        Üye Ol2
                    </button>
                </div>
                <img src="~/Resimler/undraw_bookshelves_re_lxoy.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Artık bizden birimisin</h3>
                    <p>
                        Hemen giriş yap
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Giriş Yap
                    </button>
                </div>
                <img src="img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/SellMenuCss/app.js"></script>
</body>
</html>
